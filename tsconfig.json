{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["assets/*"],
      "@modules/*": ["modules/*"],
      "@components/*": ["components/*"],
      "@config/*": ["config/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts", "components/HapticTab.blech", "components/ThemedText.tsx", "components/ParallaxScrollView.blech", "components/HelloWave.blech", "components/Collapsible.blech", "components/ThemedView.blech", ]
}
